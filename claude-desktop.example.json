{
  "mcpServers": {
    "gdb-mcp": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined",
        "-v",
        "/path/to/your/host/dir:/workspace",
        "gdb-mcp:latest"
      ]
    }
  }
}
